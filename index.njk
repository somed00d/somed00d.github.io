---
layout: base.njk
pagination:
  data: collections.post
  size: 10
  reverse: true
  alias: posts
---
{% for post in posts %}
  <article>
    <h1>
      <a href="{{ post.url | url }}">{{ post.data.title }}</a>
    </h1>
    <time title="{{ post.date | dateReadable }}">{{ post.date | dateFrom }}</time>
    {% excerpt post %}
    <a
    href="{{ post.url | url }}"
    aria-label="Read more on {{ post.data.title }}"
    >
    Read more
    </a>
  </article>
{% endfor %}